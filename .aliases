alias ..="cd .."
alias ...="cd ../.."
alias a="cat ~/.aliases | grep alias | grep -v grep | grep -v ls | cut -c 7-"
alias c="cd ~/Google\ Drive/code"
alias ch='sudo chef-client -z -j quickstart.json'
alias d="~/.dotfiles"

# Simple git aliases go here, more complex in .gitconfig
alias g="git"
alias ga="git add"
alias gc="git commit"
alias gd="git diff"
alias gh="git config -l | grep alias | cut -c 7-"
alias gi="git remote show origin"
alias go="git checkout"
alias gr="git remote -v"
alias gs="git status"
alias gp="git push"

alias h="history"
alias o="open"

alias fun="/usr/bin/fgrep -h "func" "~/.functions" | /usr/bin/fgrep -v fgrep | /usr/bin/sed -e 's/)//' | /usr/bin/sed -e 's/(//'| /usr/bin/sed -e 's/function //' | /usr/bin/sed -e 's/{//' | grep -v .functions | grep -v function_help"

alias vb="/Applications/VirtualBox.app/Contents/MacOS/VBoxManage"

# Colour
if ls --color > /dev/null 2>&1; then # GNU `ls`
	colorflag="--color"
else # OS X `ls`
	colorflag="-G"
fi
alias l="ls -la ${colorflag}"
alias ls="command ls ${colorflag}"
alias egrep='egrep --color=auto'
alias fgrep='fgrep --color=auto'
alias grep='grep --color=auto'
