PROMPT 0
NOESCAPE 0
ALLOWOPTIONS 0
TIMEOUT 100

### TUI
DEFAULT menu.c32

### GUI
UI vesamenu.c32
# The splash.png file is a PNG image with resolution of 640x480 px
MENU BACKGROUND splash.png

MENU COLOR title 0 #FFEF00 #00000000 none
MENU COLOR border * #00000000 #00000000 none
MENU COLOR sel 0 #FFEF00 #00000000 none
MENU COLOR hotsel 0 #FFEF00 #00000000 none
MENU COLOR unsel 0 #ffffffff #00000000 none
MENU COLOR hotkey 0 #ffffffff #00000000 none
MENU COLOR timeout 0 #ffffffff #00000000 none
MENU COLOR timeout_msg 0 #ffffffff #00000000 none

MENU TITLE ---===[ pxe ]===---

LABEL local
  MENU DEFAULT
  MENU LABEL ^1. Boot from hard drive
  COM32 chain.c32
  APPEND hd0

LABEL centos5
  MENU LABEL ^1. CentOS 5
  KERNEL images/centos/6/vmlinuz
  APPEND initrd=images/centos/5/initrd.img ks=https://raw.githubusercontent.com/CentOS/Community-Kickstarts/master/ks-centos5-64.cfg ip=dhcp ksdevice=eth0 ramdisk_size=10000 ipv6.disable=1 biosdevnames=0 net.ifnames=0 unsupported_hardware text

LABEL centos6
  MENU LABEL ^2. CentOS 6
  KERNEL images/centos/6/vmlinuz
  APPEND initrd=images/centos/6/initrd.img ks=https://raw.githubusercontent.com/CentOS/Community-Kickstarts/master/ks-minimalC6.cfg ip=dhcp ksdevice=eth0 ramdisk_size=10000 ipv6.disable=1 biosdevnames=0 net.ifnames=0 unsupported_hardware text

LABEL centos7
  MENU LABEL ^3. CentOS 7
  KERNEL images/centos/7/vmlinuz
  APPEND initrd=images/centos/7/initrd.img ks=https://raw.githubusercontent.com/CentOS/Community-Kickstarts/master/ks-minimalC6.cfg ip=dhcp ksdevice=eth0 ramdisk_size=10000 ipv6.disable=1 biosdevnames=0 net.ifnames=0 unsupported_hardware text

label ubuntu12
	menu label ^4. Ubuntu 12 (Precise)
	kernel images/ubuntu/12/linux
	append initrd=images/ubuntu/12/initrd.gz -- quiet

label ubuntu14
	menu label ^5. Ubuntu 12 (Trusty)
	kernel images/ubuntu/12/linux
	append initrd=images/ubuntu/14/initrd.gz -- quiet

label ubuntu16
	menu label ^6. Ubuntu 16 (Xenial)
	kernel images/ubuntu/12/linux
	append initrd=images/ubuntu/14/initrd.gz -- quiet
